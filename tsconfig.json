{
    "compilerOptions": {
        "module": "CommonJS",
        // args of declared functions should always have typing or at least any as a type.
        "noImplicitAny": true,
        "target": "es5",
        "outDir": "./build/",
        "sourceMap": true,
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}