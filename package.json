    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "geofirestore": "^5.2.0",
    "helmet": "^7.0.0",
    "http": "^0.0.1-security",
    "http-status": "^1.6.2",
    "husky": "^8.0.3",
    "i18n": "^0.15.1",
    "i18next": "^23.2.6",
    "i18next-fs-backend": "^2.1.5",
