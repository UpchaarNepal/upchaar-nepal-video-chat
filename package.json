{
  "name": "upchaar-nepal-video-chat",
  "version": "1.0.0",
  "description": "video/chat app",
  "main": "index.js",
  "scripts": {
    "test": "SET NODE_ENV=development & mocha -r ts-node/register test/**/*.test.ts",
    "lint": "eslint */**/*.{js,ts,tsx} --quiet --fix",
    "prepare": "husky install",
    "clean": "rimraf ./build/* && rimraf ./logs/*",
    "build": "npm run clean && npm run lint && tsc",
    "start:dev": "SET NODE_ENV=development & npm run build",
    "run:dev": "pm2 start ./config/pm2/pm2-dev-process.config.js",
    "start:prod": "SET NODE_ENV=production  & npm run build",
    "run:prod": "pm2 start ./config/pm2/pm2-prod-process.config.js",
    "monitor": "pm2 monit",
    "logs": "pm2 logs upn-userservice-dev --lines 2000",
    "stop": "pm2 delete upn-userservice-dev && npm run clean",
    "dev:debug": "SET NODE_ENV=development & ts-node-dev --transpile-only --respawn --inspect=4321 --project tsconfig.json ./src/bin/www.ts",
    "dev": "SET NODE_ENV=development && ts-node-dev --respawn --transpile-only src/bin/www.ts"
  },
  "author": "",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
